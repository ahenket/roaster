{
    "openapi": "3.0.0",
    "info": {
        "version": "7.0.0",
        "title": "TEI Publisher REST API",
        "description": ""
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "http://localhost:8080/exist/apps/oas-router"
        }
    ],
    "paths": {
        "/{path}/{doc}.xml": {
            "get": {
                "description": "Retrieve XML document",
                "operationId": "route:echo-xml",
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "description": "Relative collection path"
                    },
                    {
                        "name": "doc",
                        "in": "path",
                        "required": true,
                        "description": "Name of the document"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/{path}": {
            "get": {
                "operationId": "route:echo-parameters",
                "parameters": [
                    {
                        "name": "path",
                        "in": "path",
                        "required": true,
                        "description": "Path to the document, relative to the data root",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "view",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "items": {
                                "enum": [
                                    "div",
                                    "page",
                                    "single"
                                ]
                            }
                        }
                    },
                    {
                        "name": "root",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "xpath",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Document fragment",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}