{
    "openapi": "3.0.0",
    "info": {
        "version": "7.0.0",
        "title": "Demo REST API",
        "description": ""
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "http://localhost:8080/exist/apps/oas-router"
        }
    ],
    "paths": {
        "/posts": {
            "get": {
                "summary": "Return list of blog posts",
                "description": "Returns a list of blog posts in JSON format",
                "operationId": "route:list-posts",
                "parameters": [
                    {
                        "name": "start",
                        "in": "query",
                        "schema":{
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Array of blog posts",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Submit a post",
                "operationId": "route:new-post",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/xml": {
                            "schema": {
                                "type": "string"
                            },
                            "example": "<article><title>My new article</title></article>"
                        },
                        "application/json": {
                            "schema": {
                                "type": "object"
                            },
                            "example": {
                                "title": "My new blog post in JSON"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Description of the added post",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/posts/{id}": {
            "get": {
                "summary": "Retrieve post content",
                "operationId": "route:get-post",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "XML content of the post",
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a post",
                "operationId": "route:delete-post",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}