{
    "openapi": "3.0.0",
    "info": {
        "version": "7.0.0",
        "title": "Demo REST API",
        "description": ""
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/oas-router"
        }
    ],
    "components": {
        "securitySchemes": {
            "cookieAuth": {
                "type":"apiKey",
                "name":"org.exist.login",
                "in":"cookie"
            }
        }
    },
    "paths": {
        "/login": {
            "post": {
                "description": "Login the user",
                "operationId": "router:login",
                "parameters": [
                    {
                        "name": "user",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "example": "tei"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "format": "password"
                        },
                        "required": true,
                        "example": "simple"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "description": "Log the current user out",
                "operationId": "router:logout",
                "responses": {
                    "401": {
                        "description": "User logged out",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/posts": {
            "get": {
                "summary": "Return list of blog posts",
                "description": "Returns a list of blog posts in JSON format",
                "operationId": "route:list-posts",
                "parameters": [
                    {
                        "name": "start",
                        "in": "query",
                        "schema":{
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "schema":{
                            "type": "string",
                            "format": "date"
                        },
                        "example": "2020-08-24+02:00"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Array of blog posts",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Submit a post",
                "operationId": "route:new-post",
                "parameters": [
                    {
                        "name": "author",
                        "in": "query",
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/xml": {
                            "schema": {
                                "type": "string"
                            },
                            "example": "<article><title>My new article</title></article>"
                        },
                        "application/json": {
                            "schema": {
                                "type": "object"
                            },
                            "example": {
                                "title": "My new blog post in JSON"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Description of the added post",
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "User not allowed to create document",
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/posts/{id}": {
            "get": {
                "summary": "Retrieve post content",
                "operationId": "route:get-post",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "example": "a1234"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "XML content of the post",
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a post",
                "operationId": "route:delete-post",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "example": "a1234"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not authorized to delete resource"
                    }
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": [ "org.exist.login" ]
        }
    ]
}